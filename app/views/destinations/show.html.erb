<div class="main-container">
  <div class="destination">
    <div class="destination-description">
      <h1><%= @destination.name %> (<%= @destination.country %>)</h1>
      <p><%= @destination.description %></p>
    </div>
    <%= image_tag @destination.photo_url, alt: @destination.name, class: "destination-image" %>
  </div>

  <br>
  <br>
  <% if @route["routes"][0] %>
    <%= render 'shared/card-destination' %>
  <% else %>
    <%= render 'shared/card-destination-driving' %>
  <% end %>
</div>
