<div class="main-container">
  <div class="destination">
    <div class="destination-description">
      <h2><%= @chosen_destination.name %> (<%= @chosen_destination.country %>)</h2>
      <p><%= @chosen_destination.description %></p>
      <br>
      <%= link_to "TO KNOW MORE", "#", class: "button", id: "button-show" %>
    </div>
    <%= image_tag @chosen_destination.photo_url_medium, alt: @chosen_destination.name, class: "destination-image" %>
  </div>

  <br>
  <br>
  <%= render 'shared/card-destination-show' %>
  <div>
    <%= image_tag("wave_background.png", class: "image-background") %>
  </div>
</div>
