function initMarkdown() {
  const textParentNode = document.querySelector("[data-step-id='<%= @step.id %>']")
                                .querySelector(".step-infos");
  const textDescription = textParentNode.querySelector(".text-description p");
  const plus = textParentNode.querySelector("#link_edit_description");
  const textPlaceholder = textDescription.innerHTML;
  textParentNode.removeChild(textDescription);
  textParentNode.removeChild(plus);
  textParentNode.insertAdjacentHTML('afterbegin', `<%= j render partial: 'shared/form_patch_description_traveldiary' %>`)
  const textArea = textParentNode.querySelector("textarea")
  textArea.classList.remove("is-valid");
  textArea.parentNode.classList.remove("form-group");
};

initMarkdown();


