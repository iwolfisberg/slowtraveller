<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to destinations_path, class: "navbar-brand" do %>
    <p class="logo"><span id="logo-slow">Slow</span>Traveller</p>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="navbar-item dropdown">
          <span class="dropdown-toggle navbar-link" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            My informations
          </span>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My favourite", list_favorites_path, class: "dropdown-item" %>
            <%= link_to "My travel diary", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="navbar-item">
          <%= link_to "Sign up", new_user_registration_path, class: "navbar-link" %>
        </li>
        <li class="navbar-item">
          <%= link_to "Login", new_user_session_path, class: "navbar-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
