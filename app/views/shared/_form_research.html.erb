<div class="col-sm-12 form">
  <%= simple_form_for destinations_path,
  method: :get,
  wrapper: :inline_form,
  html: { class: "form-inline" },
  wrapper_mappings: {
    boolean: :inline_boolean
  } do |f| %>
    <%= f.input 'location', placeholder: "Departure position", input_html: { class: "mb-2 mr-sm-2" } %>
    <%= f.input 'departure_day', placeholder: "Departure day", input_html: {class: "datepicker mb-2 mr-sm-2"} %>
    <%= f.input 'departure_time', placeholder: "Departure time", input_html: {class: "timepicker mb-2 mr-sm-2"} %>
    <%= f.submit "Find destination", class: "btn-secondary button mb-2" %>
  <% end %>
</div>
